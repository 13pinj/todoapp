{{template "header" .}}
<ul>
  {{range .Lists}}
  <li class="todolist" data-id="{{.ID}}">
    <a href="{{.Path}}">{{.Title}}</a> -
    {{.Len}} дел
    <button type="button" name="button" class="delete">X</button>
  </li>
  {{else}}
  <p>
    <i>Списков дел нет :(</i>
  </p>
  {{end}}
</ul>
<form action="/list-create" method="post">
  <input type="text" name="title" value="">
  <input type="submit" name="submit" value="Добавить">
</form>
{{template "footer" .}}
