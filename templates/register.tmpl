{{template "header" .}}
<h1>TodoApp</h1>
<h2>Списки дел</h2>
<form action="/register" method="post">
	<input type="text" name="name" placeholder="Имя"><br>
	<input type="password" name="password" placeholder="Пароль"><br>
	<ul>
		{{range .Errors}}
		<li>{{.}}</li>
		{{end}}
	</ul>
	<input type="submit" name="submit" value="Зарегистрироваться">
	или <a href="/">Войти</a>
</form>
{{template "footer" .}}
